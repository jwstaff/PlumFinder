# PlumFinder Environment Variables
# Copy this file to .env and fill in your values

# Resend API Key (required for email)
# Get yours at: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx

# Sender email (optional, defaults to plumfinder@resend.dev)
# Must be verified in Resend if using custom domain
SENDER_EMAIL=plumfinder@resend.dev

# Turso Database (required for tracking seen items)
# Get yours at: https://turso.tech
TURSO_DATABASE_URL=libsql://your-db-name.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Facebook Session Cookie (optional, for Facebook Marketplace)
# Extract from browser: Developer Tools -> Application -> Cookies
# Format: "c_user=XXX; xs=YYY"
FB_SESSION_COOKIE=
